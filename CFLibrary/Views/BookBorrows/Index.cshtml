@model IEnumerable<CFLibrary.Models.BookBorrow>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Shopping Cart</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Author)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        <img src="@book.Book.ImgUrl" />
                    </td>
                    <td>
                        <h2>@book.Book.Title</h2>
                    </td>
                    <td>
                        <h3>@book.Book.Author</h3>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
