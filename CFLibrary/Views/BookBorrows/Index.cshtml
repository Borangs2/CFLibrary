@model IEnumerable<CFLibrary.Models.BookBorrow>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Borrowed Books";
}

<h1>Details</h1>

<div>
    <h4>Borrowed Books</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Book.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReturnDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {

                <tr class="book">
                    <td class="w-25">
                        <img src="@book.Book.ImgUrl" class="w-50" />
                    </td>
                    <td>
                        <h2>@book.Book.Title</h2>
                    </td>
                    <td>
                        <h3>@Html.DisplayFor(modelItem => book.Book.Author.FirstName) @Html.DisplayFor(modelItem => book.Book.Author.LastName)</h3>
                    </td>
                    <td>
                        <h4>@Html.DisplayFor(modelItem => book.ReturnDate)</h4>
                    </td>
                </tr>


            }
        </tbody>
    </table>


</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


<style>
    .book {
        border-top: 4px solid #eeeeee;
    }

    tr {
        background-color: lightgray;
    }
</style>