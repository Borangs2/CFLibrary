@model IEnumerable<CFLibrary.Models.User>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    @if (Context.Session.GetInt32("UserId") != null)
    {
        <a asp-action="Logout" class="btn btn-outline-danger float-right">Logout</a>

    }

</p>

@if (TempData["Logout"] != null)
{
    <div class="alert-success p-2">
        <h5 class="text-center">You have been logged out</h5>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Login" asp-route-id="@item.UserId">Login</a>

                    @*<a asp-action="Details" asp-route-id="@item.UserId">Shopping Cart</a> |*@
                    @*<a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
